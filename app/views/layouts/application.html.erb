<!DOCTYPE html>
<html>
  <head>
    <title>Basciiart</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav>
      <p class="title">bASCIIart</p>
      <ul>
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'Beets', beets_path %></li>
        <% if @current_user.present? %>
          <% if @current_user.admin? %>
            <li><%= link_to 'Users', users_path %></li>
          <% end %>
          <li><%= link_to "New beet!", new_beet_path %></li> <!-- Security through obscurity -->
          <li><%= link_to "Log out #{ @current_user.email }", login_path, :method => 'delete' %></li>
        <% else %>
          <li><%= link_to 'Sign up', new_user_path %></li>
          <li><%= link_to 'Login', login_path %></li>
        <% end %>
      </ul>
    </nav>

    <div class="main-container">
    <%= yield %>
    </div>

  </body>
</html>
