<h1><%= @beet.title %></h1>


<div class="controls">
  <%= link_to 'Edit post', edit_beet_path(@beet) %>
  <%= link_to 'Delete Beet', @beet, :method => 'delete' %>
</div>


<div class="post">
<pre><%= @beet.content %></pre>
<div class="info">
<a href="/users/<%= @beet.user_id %>"><%= @beet.user.username %></a>
<p>â™¡ <%= @likes.where(beet_id: @beet.id).count %></p>
</div>
</div>

<% if @beet.title.present? %>
  <p><%= @beet.title %></p>
<% end %>

<% if @beet.user_id.present? %>
  <%= link_to @beet.user.email, @beet.user %>
<% end %>

<% @comments.each do |comment| %>
  <div class="comments">
    <p><%= comment.content %></p>
    <a href="/users/<%= comment.user.id %>"><%= comment.user.username %></a>
  </div>
<% end %>
